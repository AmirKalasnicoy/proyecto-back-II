{{#each products}}
  <div style="border: 1px solid gray; padding: 10px; margin-bottom: 10px;">
    <h3>{{nombre}}</h3>
    <p>{{descripcion}}</p>
    <p><strong>Precio:</strong> ${{precio}}</p>
    <p><strong>Stock:</strong> {{stock}}</p>
    {{#if imagen}}
      <img src="{{imagen}}" alt="Imagen de {{nombre}}" width="150" />
    {{/if}}
  </div>
{{/each}}

