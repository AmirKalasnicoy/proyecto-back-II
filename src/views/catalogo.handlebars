<script>
  const user = {{{json user}}};

  function addToCart(productId) {
    fetch('/cart/add', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        productId: productId,
        quantity: 1
      })
    })
    .then(() => {
      alert(" Producto agregado al carrito");
    })
    .catch(err => {
      console.error("Error al agregar al carrito:", err);
      alert(" OcurriÃ³ un error al agregar");
    });
  }
</script>

